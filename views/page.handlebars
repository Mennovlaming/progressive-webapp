<!DOCTYPE html>
<html lang="en">
  <meta name="description">
{{head}}
<body>
   <h1>Rijksmuseum online</h1>
 
<form method="get" action="/search">
  <input type="text" name="query" placeholder="Enter your search term">
  <button type="submit">Search</button>
</form>
{{!-- loop --}}
<section>
{{#each kunstwerken}}
{{!-- elk element moet naar route/detail met de id --}}
  <a href="detail/artwork/{{this.objectNumber}}">
      <article>
        <img src="{{this.webImage.url}}400" alt="" loading="lazy">
        <div class="text">
              <h2>{{this.title}}</h2>
              <h3>{{this.principalOrFirstMaker}}</h3>
              <p>{{this.productionPlaces}}</p>
        </div>
      </article>
    </a>
{{/each}}
</section>
</body>
</html>